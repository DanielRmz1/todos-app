{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "module": "CommonJS",
      "target": "ES2024",
      "noEmit": false,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"], 
        "@controllers/*": ["src/controllers/*"],
        "@routes/*": ["src/routes/*"],
        "@services/*": ["src/services/*"],
      },
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }