{
	"printWidth": 100,
	"tabWidth": 2,
	"useTabs": true,
	"semi": true,
	"singleQuote": false,
	"quoteProps": "as-needed",
	"jsxSingleQuote": false,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"endOfLine": "lf",
	"singleAttributePerLine": false,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^[./]",
        "^@shared/(.*)$",
        "^@utils/(.*)$",
        "^@middlewares/(.*)$",
        "^@services/(.*)$",
        "^@controllers/(.*)$",
        "^@routes/(.*)$",
        "^@/types/(.*)$"
    ],
	"importOrderParserPlugins": ["typescript", "jsx"]
}